	<!--*---------------- [1] Navbar ----------------*-->
	<nav class="autohide navbar navbar-expand-lg navbar-dark main_navbar">
		<div class="container">
			<a class="navbar-brand" href="/"><img src="/img/logo-black.png" alt="logo"></a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main_nav"
