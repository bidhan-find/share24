					<% if (user) { %>
						<li class="nav-item"><a class="nav-link" href="/drop">Drop</a></li>
						<form id="logout" action="/logout" method="POST"></form>
						<li class="nav-item"><a onclick="document.getElementById('logout').submit()" class="nav-link"
								href="#">Logout</a></li>
						<li class="nav-item navbar_profile">
							<img id="userEditZoonBtn" src="/img/profile.png" alt="Navbar profile">
						</li>
						<% } else{ %>
							<li class="nav-item"><a class="nav-link login" href="/login">Login</a></li>
							<li class="nav-item"><a class="nav-link register" href="/register">Register</a></li>
							<% }%>

				</ul>
			</div>
		</div>
	</nav>

	<!--*---------------- [4] Edit user ----------------*-->
	<div class="edit_user">
		<div class="header">
			<i id="closeUserEditZoon" class='bx bx-x'></i>
			<img class="profile_img" src="/img/profile.png" alt="">
			<h4>
				Hello, <%= user?.name %>
			</h4>
			<img class="profile_bg" src="/img/auth-bg.svg" alt="">
		</div>
	</div>

