<!--*---------------- [**] Register page ----------------*-->
<section class="auth">
    <img src="/img/auth-bg.svg" class="auth_waves" alt="auth waves">
    <div class="container">
        <a href="/" class="back_btn">
            <i class='bx bx-arrow-back'></i>
            <span>Back</span>
        </a>
        <div class="auth_container">
            <div class="titles">
                <h3>Account creation</h3>
                <p>Enter a nickname and a password to create your account</p>
            </div>
            <form>
                <div class="field-wrapper">
                    <input type="text" name="username" placeholder="Username" autocomplete="off">
                    <label>Username</label>
                </div>
                <div class="field-wrapper">
                    <input type="email" name="email" placeholder="Email" autocomplete="off">
                    <label>Email</label>
                </div>
                <div class="field-wrapper">
                    <i class='auth_show_pass toggle-password bx bx-hide' toggle="#password-field"></i>
                    <input id="password-field" type="password" name="password" placeholder="Password">
                    <label>Password</label>
                </div>
                <div class="field-wrapper">
                    <i class='auth_show_pass toggle-password2 bx bx-hide' toggle="#password-field2"></i>
                    <input id="password-field2" type="password" name="confirmPassword" placeholder="Confirm Password">
                    <label>Confirm Password</label>
                </div>
                <a href="/login" class="auth_link">Already have an account!</a>
                <div class="submit_btn">
                    <button type="submit">Sign-up</button>
                </div>
            </form>
        </div>
    </div>
</section>