<!--*---------------- [**] Register page ----------------*-->
<br><br>
<section class="auth">
    <div class="container">
        <a href="/" class="back_btn">
            <i class='bx bx-arrow-back'></i>
            <span>Back</span>
        </a>
        <div class="auth_container">
            <div class="titles">
                <h3>Welcome to Share24!</h3>
                <p>Fill in your email to log in or sign in</p>
            </div>
            <form>
                <div class="field-wrapper">
                    <input type="email" name="email" placeholder="Email" autocomplete="off">
                    <label>Email</label>
                </div>
                <div class="field-wrapper">
                    <i class='auth_show_pass toggle-password bx bx-hide' toggle="#password-field"></i>
                    <input id="password-field" type="password" name="password" placeholder="Password">
                    <label>Password</label>
                </div>
                <a href="/register" class="auth_link">Don't have account?</a>
                <div class="submit_btn">
                    <button type="submit">Sign-up</button>
                </div>
            </form>
        </div>
    </div>
</section>